@model IDGS903_Tema_1.Models.Diccionario

@{
    ViewBag.Title = "Guardar";
}

<h2>Guardar</h2>

@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <h4>Diccionario</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Ingles, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ingles, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ingles, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Espanol, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Espanol, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Espanol, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
            <br />
            <input type="button" value="Mostrar" id="Mostrar" class="btn btn-warning" onclick="mostrar()"/>
        </div>

    </div>
}


@if (ViewBag.Diccionario != null)
{
    <div class="text-center">
        <h2 style="color: blue;">Palabras Registradas</h2>
        <table id="mostrarTabla" class="table table-bordered border-primary" style="display: none;">
            <thead style="background-color: yellow;">
                <tr>
                    <th>Ingles</th>
                    <th>Español</th>
                </tr>
            </thead>
            @foreach (var item in ViewBag.Diccionario)
            {
                <tbody>
                    <tr>
                        @foreach (string datos in item.Split('='))
                        {
                            <th>@datos</th>
                        }
                    </tr>
                </tbody>
            }
        </table>
    </div>
}


<div>
    @Html.ActionLink("Traductor", "Traductor")
</div>

<script>
    function mostrar() {
        var tabla = document.getElementById("mostrarTabla");
        tabla.style.display = "table"
    }
</script>

